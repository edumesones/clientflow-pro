# ClientFlow Pro - Variables de Entorno
# Copiar este archivo a .env y configurar los valores

# ============================================
# BASE DE DATOS
# ============================================
# SQLite (desarrollo)
DATABASE_URL=sqlite:///./clientflow.db
# PostgreSQL (producción)
# DATABASE_URL=postgresql://user:password@localhost:5432/clientflow

# ============================================
# SEGURIDAD
# ============================================
SECRET_KEY=tu-clave-secreta-muy-larga-y-segura-cambiar-en-produccion
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# ============================================
# OPENAI (Opcional - para funciones de IA)
# ============================================
OPENAI_API_KEY=sk-tu-api-key-de-openai
OPENAI_MODEL=gpt-4

# ============================================
# BACKEND CONFIG
# ============================================
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
DEBUG=true
ENVIRONMENT=development

# ============================================
# FRONTEND CONFIG
# ============================================
FRONTEND_PORT=3000
REACT_APP_API_URL=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000

# ============================================
# EMAIL (SMTP)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu-correo@gmail.com
SMTP_PASSWORD=tu-password-o-app-password
SMTP_TLS=true
SMTP_FROM_NAME=ClientFlow Pro
SMTP_FROM_EMAIL=noreply@clientflow.pro

# ============================================
# WHATSAPP BUSINESS API
# ============================================
WHATSAPP_API_KEY=tu-whatsapp-api-key
WHATSAPP_PHONE_NUMBER_ID=tu-phone-number-id
WHATSAPP_BUSINESS_ACCOUNT_ID=tu-business-account-id
WHATSAPP_WEBHOOK_VERIFY_TOKEN=token-de-verificacion-webhook
WHATSAPP_API_VERSION=v17.0

# ============================================
# SMS PROVIDER (Twilio como ejemplo)
# ============================================
SMS_PROVIDER=twilio
SMS_API_KEY=tu-twilio-account-sid
SMS_API_SECRET=tu-twilio-auth-token
SMS_FROM_NUMBER=+1234567890

# ============================================
# REDIS (Para colas de trabajos y caché)
# ============================================
REDIS_URL=redis://localhost:6379/0
# O para Docker:
# REDIS_URL=redis://redis:6379/0

# ============================================
# CELERY (Tareas en background)
# ============================================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_WHATSAPP=false
ENABLE_SMS=false
ENABLE_EMAIL=true
ENABLE_AI_FEATURES=false

# ============================================
# MONITOREO Y LOGS
# ============================================
LOG_LEVEL=INFO
SENTRY_DSN=

# ============================================
# CONFIGURACIÓN DE NEGOCIO
# ============================================
# Zona horaria por defecto
DEFAULT_TIMEZONE=America/Mexico_City
# Duración por defecto de las citas (minutos)
DEFAULT_APPOINTMENT_DURATION=60
# Tiempo de anticipación para recordatorios (horas)
REMINDER_24H_HOURS=24
REMINDER_1H_HOURS=1
